{
  "name": "g16-debtmate",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "cd backend && npm run dev",
    "setup": "npm install && cd backend && npm install",
    "docker:up": "docker-compose up -d --remove-orphans",
    "docker:down": "docker-compose down",
    "docker:rebuild": "docker-compose down -v && docker-compose up -d --remove-orphans",
    "docker:restart": "docker restart debtmate-postgres",
    "docker:logs": "docker-compose logs -f",
    "start": "npm run docker:up && npm run setup && echo \"Database is running at localhost:5432 with username 'postgres' and password 'debtmate'\" && concurrently \"npm run dev\" \"npm run server\""
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.14",
    "lucide-react": "^0.487.0",
    "prop-types": "^15.8.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.4.0",
    "tailwindcss": "^4.0.14",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "tsx": "^4.19.3",
    "vite": "^6.2.0"
  }
}
